<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categorias</h1>
                <% if @category.errors.any? %>
                  <div class="alert alert-danger">
                    <ul>
                      <%= @category.errors.full_messages do |message|  %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    Editando Categoria
                  </div>
                  <div class="panel-body">
                    <div class="col-lg-6">
                      <%= form_for([:backoffice, @category]) do |f| %>
                        <div class="form-group">
                          <label>Descrição</label>
                          <%= f.text_field :description, class:"form-control", placeholder:"Ex: Animais/Pets" %>
                        </div>                      
                        <button type="submit" class="btn btn-default">Gravar</button>
                      <% end %>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->